<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper">
    <select id="selectList" resultType="com.todo.demo.data.Todo">
      SELECT title, priority, isComplete
      FROM todotable
      WHERE todoNo = #{num};
    </select>

    <select id="selectTodoNo" resultType="Integer">
      SELECT MAX(todoNo)
      FROM todotable;
    </select>

</mapper>